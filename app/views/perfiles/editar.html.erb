<% @title = ("UCLABOOK - Editar Mi Perfil" ) %>

            <div class="row wrapper border-bottom white-bg page-heading">
                <div class="col-lg-10">
                    
                    <h2>Editar Perfil</h2>
                    
                    <ol class="breadcrumb">
                        <li>
                            <%= link_to 'Inicio', timelines_path, method: :get %>
                        </li>
                        <li>
                            <%= link_to 'Mi Perfil', perfiles_path, method: :get %>
                        </li>
                        <li class="active">
                                <strong>Editar Perfil</strong>
                        </li>
                    </ol>
                </div>
                <div class="col-lg-2">

                </div>
            </div>
        <div class="wrapper wrapper-content">
            <div class="row animated fadeInRight">
                <div class="col-md-12">
                    <div class="ibox float-e-margins">
                        <div class="ibox-title">
                            <h5>Detalles del perfil</h5>
                        </div>
                        <div class="ibox-content">
                        <div>
                            
                        <form action="/perfiles/validar_editar" method="POST" class="m-t">
                            <%= token_tag %>
                            <%= @perfil.fecha_nacimiento %>
                            <div class="form-group" style="padding-bottom: 30px;">
                                <label class="control-label col-sm-4" >Fecha de Nacimiento:</label>
                                <div class="form-inline col-sm-8">
                                    <select name="day" class="form-control">
                                        <% for i in 1..31 %>
                                          <option value="<%= i %>"><%= i %></option>
                                        <% end %>
                                    </select>
                                    
                                    <select name="month " class="form-control">
                                        <option value="01">Enero</option>
                                        <option value="02">Febrero</option>
                                        <option value="03">Marzo</option>
                                        <option value="04">Abril</option>
                                        <option value="05">Mayo</option>
                                        <option value="06">Junio</option>
                                        <option value="07">Julio</option>
                                        <option value="08">Agosto</option>
                                        <option value="09">Septiembre</option>
                                        <option value="10">Octubre</option>
                                        <option value="11">Noviembre</option>
                                        <option value="12">Diciembre</option>
                                    </select>
                                    
                                    <select name="year" class="form-control">
                                        <% (1950..2017).each do |i|  %>
                                          <option value="<%= i %>"><%= i %></option>
                                        <% end %>
                                    </select>
                                    
                                </div>
                            </div>
                            <div class="form-group" style="padding-bottom: 30px;">
                                <label class="control-label col-sm-4" >Teléfono:</label>
                                <div class="col-sm-8">
                                    <input type="phone" value="<%= @perfil.telefono %>" name="telefono" class="form-control" placeholder="Telefono" required>
                                </div>
                            </div>
                            <div class="form-group" style="padding-bottom: 30px;">
                                <label class="control-label col-sm-4" >Titulo:</label>
                                <div class="col-sm-8">
                                    <input type="text" name="titulo" value="<%= @perfil.titulo %>" class="form-control" placeholder="Titulo" required>
                                </div>
                            </div>
                            <div class="form-group" style="padding-bottom: 30px;">
                                <label class="control-label col-sm-4" >Ocupación:</label>
                                <div class="col-sm-8">
                                    <input type="text" name="ocupacion" value="<%= @perfil.ocupacion %>" class="form-control" placeholder="Ocupación" required>
                                </div>
                            </div>
                            <div class="form-group" style="padding-bottom: 30px;">
                                <label class="control-label col-sm-4" >Pais</label>
                                <div class="col-sm-8">
                                    <input type="text" name="pais" value="<%= @perfil.pais %>" class="form-control" placeholder="Pais" required>
                                </div>
                            </div>
                            <div class="form-group" style="padding-bottom: 30px;">
                                <label class="control-label col-sm-4" >Estado</label>
                                <div class="col-sm-8">
                                    <input type="text" name="estado" value="<%= @perfil.estado %>" class="form-control" placeholder="Estado" required>
                                </div>
                            </div>
                            <div class="form-group" style="padding-bottom: 30px;">
                                <label class="control-label col-sm-4" >Ciudad</label>
                                <div class="col-sm-8">
                                    <input type="text" name="ciudad" value="<%= @perfil.ciudad %>" class="form-control" placeholder="Ciudad" required>
                                </div>
                            </div>
                            <div class="form-group" style="padding-bottom: 30px;">
                                <label class="control-label col-sm-4" >Cuentanos más sobre ti</label>
                                <div class="col-sm-8">
                                    <textarea name="sobremi" value="<%= @perfil.sobre_mi %>" class="form-control" placeholder="Cuentanos más sobre ti" required></textarea>
                                </div>
                            </div>
                            <br>
                            <br>
                            
                            <button type="submit" class="btn btn-primary block full-width m-b">Guardar</button>
                        </form>    
                            
                        </div>
                        </div>
                    </div>
                </div>
            </div>
        <div class="footer">
            <div class="pull-right">
                10GB de <strong>250GB</strong> Gratis.
            </div>
            <div>
                <strong>Copyright</strong> UCLABooK &copy; 2017-2018
            </div>
        </div>

        
